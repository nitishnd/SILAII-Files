    font-size: clamp(10px, calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }}), 16px);
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  .DP--{{ section_id }} {
    --pin-size: 12px;
    margin-top: {{ section.settings.outer_margin | divided_by: 2 }}px;
