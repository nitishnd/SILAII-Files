{%- comment -%} HTML {%- endcomment -%}
<section id="DP--{{ section.id }}"
        class="DP--{{ section.id }} dsgn-pck__article-content dsgn-pck__section">
  <div class="dsgn-pck__sizer">
    {%- for block in section.blocks -%}
      <div id="DP--{{ block.id }}" class="dsgn-pck__block dsgn-pck__block--{{ block.type }} dsgn-pck__justify-{{ block.settings.text_alignment }}" {{ block.shopify_attributes }}>
        {%- case block.type -%}
          {%- when 'metadata' -%}
            {%- if block.settings.show_published_at -%}
            <p class="dsgn-pck__published-at"><time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">{{ 'published_at' | t }} {{
                article.published_at | date: format: 'date' }}</time></p>
            {%- endif -%}
            {%- if block.settings.show_updated_at -%}
            <p class="dsgn-pck__updated-at"><time datetime="{{ article.updated_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">{{ 'updated_at' | t }} {{
                article.updated_at | date: format: 'date' }}</p>
            {%- endif -%}
          {%- when 'author' -%}
            <p class="dsgn-pck__author">{{ 'by' | t }} {{ article.author }}</p>
          {%- when 'title' -%}
            <style>
              #DP--{{ block.id }} {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
              }
            </style>
            <h1 class="dsgn-pck__heading">{{ article.title }}</h1>
          {%- when 'article' -%}
            <style>
              #DP--{{ block.id }} {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
              }
            </style>
            <div class="dsgn-pck__content dsgn-pck__rte">
              {{ article.content }}
            </div>
          {%- when 'divider' -%}
            <style>
              #DP--{{ block.id }} {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
              }

              #DP--{{ block.id }} .dsgn-pck__divider {
                height: 0;
                border: none;
                background: transparent;
                {%- if block.settings.alignment == 'left' -%}
                  margin: 0;
                {%- else -%}
                  margin: 0 auto;
                {%- endif -%}
                width: {{ block.settings.base_width }}%;
                border-top: {{ block.settings.thickness }}px {{ block.settings.style }} {{ block.settings.divider_color }};
              }
            </style>
            <hr class="dsgn-pck__divider" aria-hidden="true">
          {%- when 'tags' -%}
            <div class="dsgn-pck__article__additional dsgn-pck__flex dsgn-pck__justify-{{ block.settings.text_alignment }}">
              <ul class="dsgn-pck__article__tags">
                {% for tag in article.tags %}
                <li class="dsgn-pck__article__tag">
                  <a class="dsgn-pck__article__tag-link"
                    href="{{ routes.root_url }}blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">
                    {{ tag }}
                  </a>
                </li>
                {% endfor %}
              </ul>
            </div>
          {%- when 'featured_image' -%}
            {%- comment -%} Color: check if color is set to transparent {%- endcomment -%}
            {%- assign border_alpha = block.settings.border_color | color_extract: 'alpha' -%}

            {% comment %} Color: check for gradient picker {% endcomment %}
            {%- capture image_overlay_color -%}
              {%- if block.settings.image_overlay_color contains 'gradient' -%}
                {{ block.settings.image_overlay_color }}
              {%- else -%}
                {% unless block.settings.image_overlay_color contains 'rgba' %}
                  {{ block.settings.image_overlay_color | color_modify: 'alpha', 0.5 }}
                {% endunless %}
              {%- endif -%}
            {%- endcapture -%}

            {%- comment -%} Images: check image crop aspect ratio {%- endcomment -%}
            {%- if block.settings.image_crop == 'none' -%}
              {%- assign image_crop_width = block.settings.image.width | default: '1000' -%}
              {%- assign image_crop_height = block.settings.image.height | default: '1200' -%}
            {%- else -%}
              {%- assign image_crop_width = block.settings.image_crop | split: ':' | first | times: 1000 -%}
              {%- assign image_crop_height = block.settings.image_crop | split: ':' | last | times: 1000 -%}
            {%- endif -%}

            <style>
              #DP--{{ block.id }} .dsgn-pck__image-sizer {
                width: {{ block.settings.base_width }}%;
              }

              #DP--{{ block.id }}.dsgn-pck__justify-center .dsgn-pck__image-sizer {
                margin: auto;
              }

              #DP--{{ block.id }} .dsgn-pck__image {
                position: relative;
                color: inherit;
                transform: rotate({{ block.settings.angle }}deg);
              }

              #DP--{{ block.id }} .dsgn-pck__image__wrapper {
                {%- if border_alpha != 0 -%}
                  border: 1em solid;
                {%- endif -%}
                border-color: {{ block.settings.border_color }};
                box-shadow: {%- if border_alpha != 0 -%} 2px 2px 20px rgba(0,0,0, 0.1); {%- endif -%};
                background-color: {{ block.settings.border_color }};
              }

              #DP--{{ block.id }} .dsgn-pck__image__wrapper:before {
                content: "";
                display: block;
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 1;
                background: {{ image_overlay_color }};
              }
            </style>

            <div class="dsgn-pck__image-sizer">
              <div class="dsgn-pck__image">
                <div class="dsgn-pck__image__wrapper">
                  <svg viewBox="0 0 {{ image_crop_width }} {{ image_crop_height }}"></svg>
                    {{ article.image | image_url: width: 2800 | image_tag: loading: 'lazy' }}
                </div>
              </div>
            </div>
        {%- endcase -%}
      </div>
    {%- endfor -%}
  </div>
</section>
{%- endcapture -%}
{{ minify | strip_newlines }}

