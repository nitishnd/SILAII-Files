{%- comment -%} Assign: Preview section js fix {%- endcomment -%}
{%- assign section_id = section.id | replace: '+', '' | replace: '=', '' -%}

{%- comment -%} Layout: has user entered measurement value into max-width field? {%- endcomment -%}
{%- if section.settings.max_width contains 'px' or section.settings.max_width contains '%' -%}
  {%- assign max_width = section.settings.max_width -%}
{%- else -%}
  {%- assign max_width = section.settings.max_width | append: 'px' -%}
{%- endif -%}

{%- comment -%} Text: custom font_picker values {%- endcomment -%}
{%- capture font_settings_list -%}
{{ section.settings.main_font | font_face: font_display: 'swap' }}~
{{ section.settings.main_font | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}~
{{ section.settings.main_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}~
{{ section.settings.main_font | font_modify: 'style', 'italic' | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}~
{{ section.settings.heading_font | font_face: font_display: 'swap' }}~
{{ section.settings.heading_font | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}~
{{ section.settings.heading_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}~
{{ section.settings.heading_font | font_modify: 'style', 'italic' | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}
{%- endcapture -%}
{%- assign font_array = font_settings_list | split: '~' -%}

{%- capture minify -%}
{%- comment -%} CSS {%- endcomment -%}
<style>
{%- if section.settings.override_theme_font != blank -%}
  {%- for font in font_array -%}
    {%- unless font contains 'error' -%}{{ font }}{%- endunless -%}
  {%- endfor -%}
  .DP--{{ section_id }} {
    --main-font: {{ section.settings.main_font.family }}, {{ section.settings.main_font.fallback_families }};
    --main-font-weight: {{ section.settings.main_font.weight }};
    --main-font-style: {{ section.settings.main_font.style }};
    --heading-font: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    --heading-font-weight: {{ section.settings.heading_font.weight }};
    --heading-font-style: {{ section.settings.heading_font.style }};
  }
{%- endif -%}

.DP--{{ section_id }} {
  background: {{ background_color | default: section.settings.background_color }};
  margin-top: {{ section.settings.outer_margin }}px;
  margin-bottom: {{ section.settings.outer_margin }}px;
}

.DP--{{ section_id }} .dsgn-pck__sizer {
  padding-top: {{ section.settings.inner_padding }}px;
  padding-bottom: {{ section.settings.inner_padding }}px;
  width: {{ section.settings.base_width }}%;
  max-width: {{ max_width }};
}

.DP--{{ section_id }} .dsgn-pck__heading {
  line-height: var(--dp-g-heading-line-height, var(--dp-heading-line-height, calc(3px + 2ex + 3px)));
  font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 35px)) * {{ section.settings.text_size | times: 0.01 }});
  color: {{ section.settings.heading_color }};
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--heading-font);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  {%- endif -%}
}

.DP--{{ section_id }} table {
  border: 1px solid {{ section.settings.text_color }};
  border-collapse: collapse;
  margin: 0;
  padding: 0;
  width: 100%;
  table-layout: fixed;
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.008 }});
  box-shadow: none;
  {%- if section.settings.override_theme_font != blank -%}
    font-family: var(--main-font);
    font-weight: var(--main-font-weight);
    font-style: var(--main-font-style);
    {%- endif -%}
}

.DP--{{ section_id }} table caption {
  margin: .5em 0 .75em;
}

.DP--{{ section_id }} table tr {
  border: 1px solid {{ section.settings.text_color }};
  padding: .35em;
  background: {{ section.settings.table_background_color }};
}

.DP--{{ section_id }} table th,
.DP--{{ section_id }} table td {
  padding: .625em;
  text-align: {{ section.settings.text_alignment }};
  border: 1px solid {{ section.settings.text_color }};
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.008 }});
}

@media (max-width: 480px) {
  .DP--{{ section_id }} table {
    border: 0;
  }

  .DP--{{ section_id }} table thead {
    border: none;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
  }

  .DP--{{ section_id }} table tr {
    border: 0;
    border-bottom: 1px solid {{ section.settings.text_color }};
    display: block;
    margin-bottom: .625em;
    padding: 0;
  }

  .DP--{{ section_id }} table td {
    border: 1px solid {{ section.settings.text_color }};
    border-top: 0;
    display: block;
    text-align: right;
  }

  .DP--{{ section_id }} table td::before {
    content: attr(data-label);
    float: left;
    font-weight: bold;
    text-transform: uppercase;
  }

  .DP--{{ section_id }} table td:first-child {
    border-top: 1px solid {{ section.settings.text_color }};
  }

  .DP--{{ section_id }} table td:last-child {
    border-bottom: 0;
  }
}

{%- if section.settings.custom_css != blank -%}
  {%- assign custom_section_declarations = section.settings.custom_css | split: '}' -%}
  {%- for declaration in custom_section_declarations -%}
    {%- if declaration contains '{' -%}
      #DP--{{ section_id }} {{ declaration }} }
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

/* Landscape phones and down */
@media (max-width: 480px) {

  {%- if section.settings.mobile_custom_css != blank -%}
    {%- assign mobile_custom_declarations = section.settings.mobile_custom_css | split: '}' -%}
    {%- for declaration in mobile_custom_declarations -%}
      {%- if declaration contains '{' -%}
        #DP--{{ section_id }} {{ declaration }} }
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
}
</style>

{%- comment -%} HTML {%- endcomment -%}
<section id="DP--{{ section_id }}" class="DP--{{ section_id }} dsgn-pck__table dsgn-pck__section">
  {%- if section.settings.anchor_id != blank -%}
    <div id="{{ section.settings.anchor_id | remove: '#' | handleize }}" class="dsgn-pck__anchor-id" style="height: 0; overflow: hidden;"></div>
  {%- endif -%}
  <div class="dsgn-pck__sizer">
    <div class="dsgn-pck__table-display">
      <table>
        <caption><h2 class="dsgn-pck__heading">{{ section.settings.heading }}</h2></caption>
        {%- for block in section.blocks -%}
          {%- if forloop.first -%}
            <thead>
              <tr {{ block.shopify_attributes }}>
                {%- for i in (1..5) -%}
                  {%- capture column -%}column_{{ i }}{%- endcapture -%}
                  {%- if block.settings[column] != blank -%}
                    <th scope="col">{{ block.settings[column] }}</th>
                  {%- endif -%}
                {%- endfor -%}
              </tr>
            </thead>
            <tbody>
          {%- else -%}
              <tr {{ block.shopify_attributes }}>
                {%- for i in (1..5) -%}
                  {%- capture column -%}column_{{ i }}{%- endcapture -%}
                  {%- if section.blocks[0].settings[column] != blank -%}
                    <td data-label="{{ section.blocks[0].settings[column] }}">
                      {{ block.settings[column] | default: "&nbsp" }}
                    </td>
                  {%- endif -%}
                {%- endfor -%}
              </tr>
            {%- endif -%}
            {%- if forloop.last -%}
              </tbody>
            {%- endif -%}
          {%- endfor -%}
        </table>
    </div>
  </div>
</section>
{%- endcapture -%}
{{ minify | strip_newlines }}

