              --desktop-row-height: span {{ block.settings.row_height }};
              --desktop-col-start: {{ block.settings.col_start }};
              --desktop-col-width: span {{ block.settings.col_width }};
              --mobile-row: {{ block.settings.mobile_row_start }};
