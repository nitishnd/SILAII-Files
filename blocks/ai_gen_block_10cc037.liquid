{% doc %}
  @prompt
    description layout with A1 content which shows the specs of the products and description. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-description-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-product-description__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.content_gap }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-product-description__container-{{ ai_gen_id }} {
      grid-template-columns: {% if block.settings.layout == 'specs-left' %}1fr 1.5fr{% else %}1.5fr 1fr{% endif %};
      gap: {{ block.settings.content_gap | times: 1.5 }}px;
    }
  }

  .ai-product-description__specs-{{ ai_gen_id }} {
    background-color: {{ block.settings.specs_bg_color }};
    padding: {{ block.settings.specs_padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.layout == 'specs-left' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-product-description__specs-{{ ai_gen_id }} {
      order: 2;
    }
  }

  .ai-product-description__specs-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.specs_title_size }}px;
    color: {{ block.settings.specs_title_color }};
    margin: 0 0 {{ block.settings.specs_padding | divided_by: 2 }}px;
    font-weight: 600;
  }

  .ai-product-description__specs-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-product-description__spec-item-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    padding: {{ block.settings.spec_item_padding }}px 0;
    border-bottom: 1px solid {{ block.settings.divider_color }};
    gap: 16px;
  }

  .ai-product-description__spec-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-product-description__spec-label-{{ ai_gen_id }} {
    font-weight: 600;
    color: {{ block.settings.spec_label_color }};
    font-size: {{ block.settings.spec_text_size }}px;
    flex-shrink: 0;
  }

  .ai-product-description__spec-value-{{ ai_gen_id }} {
    color: {{ block.settings.spec_value_color }};
    font-size: {{ block.settings.spec_text_size }}px;
    text-align: right;
  }

  .ai-product-description__content-{{ ai_gen_id }} {
    {% if block.settings.layout == 'specs-left' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-product-description__content-{{ ai_gen_id }} {
      order: 1;
    }
  }

  .ai-product-description__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_title_size }}px;
    color: {{ block.settings.description_title_color }};
    margin: 0 0 {{ block.settings.description_title_size | divided_by: 2 }}px;
    font-weight: 600;
  }

  .ai-product-description__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_text_size }}px;
    color: {{ block.settings.description_text_color }};
    line-height: 1.6;
  }

  .ai-product-description__text-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-product-description__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-product-description__text-{{ ai_gen_id }} ul,
  .ai-product-description__text-{{ ai_gen_id }} ol {
    margin: 0 0 16px;
    padding-left: 20px;
  }

  .ai-product-description__text-{{ ai_gen_id }} h1,
  .ai-product-description__text-{{ ai_gen_id }} h2,
  .ai-product-description__text-{{ ai_gen_id }} h3,
  .ai-product-description__text-{{ ai_gen_id }} h4,
  .ai-product-description__text-{{ ai_gen_id }} h5,
  .ai-product-description__text-{{ ai_gen_id }} h6 {
    color: {{ block.settings.description_title_color }};
    margin: 0 0 12px;
  }
{% endstyle %}

<div class="ai-product-description-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-description__container-{{ ai_gen_id }}">
    <div class="ai-product-description__specs-{{ ai_gen_id }}">
      {% if block.settings.specs_title != blank %}
        <h3 class="ai-product-description__specs-title-{{ ai_gen_id }}">
          {{ block.settings.specs_title }}
        </h3>
      {% endif %}

      <ul class="ai-product-description__specs-list-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% liquid
            assign spec_label_key = 'spec_' | append: i | append: '_label'
            assign spec_value_key = 'spec_' | append: i | append: '_value'
            assign spec_label = block.settings[spec_label_key]
            assign spec_value = block.settings[spec_value_key]
          %}

          {% if spec_label != blank and spec_value != blank %}
            <li class="ai-product-description__spec-item-{{ ai_gen_id }}">
              <span class="ai-product-description__spec-label-{{ ai_gen_id }}">
                {{ spec_label }}
              </span>
              <span class="ai-product-description__spec-value-{{ ai_gen_id }}">
                {{ spec_value }}
              </span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <div class="ai-product-description__content-{{ ai_gen_id }}">
      {% if block.settings.description_title != blank %}
        <h2 class="ai-product-description__title-{{ ai_gen_id }}">
          {{ block.settings.description_title }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-product-description__text-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% else %}
        <div class="ai-product-description__text-{{ ai_gen_id }}">
          {{ product.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

