{% doc %}
  @prompt
    Create a full-width hero section with a dark cinematic background. Center-aligned text. Headline large and minimal. Subheading expressive but short, let it be light color
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-cinematic-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-cinematic-hero-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-cinematic-hero-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-cinematic-hero-bg-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-cinematic-hero-bg-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
    opacity: 0.15;
  }

  .ai-cinematic-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-cinematic-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 40px 20px;
    max-width: {{ block.settings.content_width }}px;
    width: 100%;
  }

  .ai-cinematic-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    line-height: 1.1;
    margin: 0 0 {{ block.settings.spacing }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.headline_weight }};
    letter-spacing: {{ block.settings.headline_spacing }}px;
  }

  .ai-cinematic-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.subheading_weight }};
    opacity: {{ block.settings.subheading_opacity | divided_by: 100.0 }};
  }

  .ai-cinematic-hero-button-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-cinematic-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_size }}px;
    font-weight: {{ block.settings.button_weight }};
    letter-spacing: 1px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_border }};
  }

  .ai-cinematic-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_bg_hover }};
    color: {{ block.settings.button_text_color_hover }};
    border-color: {{ block.settings.button_border_hover }};
  }

  @media screen and (max-width: 749px) {
    .ai-cinematic-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_mobile }}px;
    }

    .ai-cinematic-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.6 }}px;
    }

    .ai-cinematic-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-cinematic-hero-content-{{ ai_gen_id }} {
      padding: 30px 20px;
    }
  }
{% endstyle %}

<div class="ai-cinematic-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-cinematic-hero-bg-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2400 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-cinematic-hero-bg-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-cinematic-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-cinematic-hero-content-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h1 class="ai-cinematic-hero-headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-cinematic-hero-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.button_label != blank and block.settings.button_link != blank %}
      <div class="ai-cinematic-hero-button-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-cinematic-hero-button-{{ ai_gen_id }}">
          {{ block.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

