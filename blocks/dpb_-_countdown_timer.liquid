{%- capture js_scripts -%}
  <script type="module" defer>
    /**
     * Custom element for handling countdown timer functionality
     * @extends HTMLElement
     */
    class CountdownTimer extends HTMLElement {
      constructor() {
        super();
        this.timeinterval = null;
      }

      connectedCallback() {
        this.initializeAndEnableClock();
      }

      initializeAndEnableClock() {
        const clockSelector = '.dsgn-pck__clock';
        const clockWrap = this.querySelector('.dsgn-pck__clock-wrap');
        if (!clockWrap) return;

        const startDate = clockWrap.dataset.timerStart;
        const endDate = clockWrap.dataset.timerEnd;
        const resetDaily = clockWrap.dataset.timerResetDaily === "true";
        const timezone = clockWrap.dataset.timerTimezone;
        const startMs = Date.parse(startDate);
        const endMs = Date.parse(endDate);

        function getTimezoneOffset(timezone) {
          const offsetMatch = timezone.match(/([-+]\d{2}):(\d{2})/);
          if (offsetMatch) {
            const hoursOffset = parseInt(offsetMatch[1], 10);
            const minutesOffset = parseInt(offsetMatch[2], 10);
            return hoursOffset * 60 + (hoursOffset < 0 ? -minutesOffset : minutesOffset);
          }
          return 0;
        }

        const timezoneOffset = getTimezoneOffset(timezone);

        function getCurrentMsWithTimezone() {
          const now = new Date();
          const localTime = now.getTime();
          const localOffset = now.getTimezoneOffset();
          const totalOffset = localOffset + timezoneOffset;
          return localTime + totalOffset * 60 * 1000;
        }

        const currentMs = getCurrentMsWithTimezone();

        if (endMs <= currentMs || currentMs < startMs) {
          clockWrap.style.display = 'none';
          return;
        }

        const clock = this.querySelector(clockSelector);
        let self = this;

        function updateClockDisplay(hours, minutes, seconds, days = null) {
          if (days !== null) {
            const daysSpan = clock.querySelector('.dsgn-pck__days .dsgn-pck__number');
            if (resetDaily == true){
              daysSpan.innerHTML = 0;
            } else {
              if (daysSpan.innerHTML != days) daysSpan.innerHTML = days;
            }
          }

          const hoursSpan = clock.querySelector('.dsgn-pck__hours .dsgn-pck__number');
          const minutesSpan = clock.querySelector('.dsgn-pck__minutes .dsgn-pck__number');
          const secondsSpan = clock.querySelector('.dsgn-pck__seconds .dsgn-pck__number');

          if (hoursSpan.innerHTML != hours) hoursSpan.innerHTML = ('0' + hours).slice(-2);
          if (minutesSpan.innerHTML != minutes) minutesSpan.innerHTML = ('0' + minutes).slice(-2);
          if (secondsSpan.innerHTML != seconds) secondsSpan.innerHTML = ('0' + seconds).slice(-2);
        }

        function calculateTimeLeft(targetTime) {
          const total = targetTime - getCurrentMsWithTimezone();
          const days = Math.floor(total / (1000 * 60 * 60 * 24));
          const hours = Math.floor((total / (1000 * 60 * 60)) % 24);
          const minutes = Math.floor((total / (1000 * 60)) % 60);
          const seconds = Math.floor((total / 1000) % 60);
          return { total, days, hours, minutes, seconds };
        }

        function updateClockLogic(timeLeft) {
          updateClockDisplay(timeLeft.hours, timeLeft.minutes, timeLeft.seconds, timeLeft.days);

          if (timeLeft.total <= 0) {
            clearInterval(self.timeinterval);
            if (resetDaily) {
              self.initializeAndEnableClock();
            }
          }
        }

        if (resetDaily) {
          const resetInterval = 24 * 60 * 60 * 1000;

          function getNextResetTime() {
            const lastResetTime = new Date(endMs);
            const timeSinceLastReset = getCurrentMsWithTimezone() - endMs;
            const timeUntilNextReset = resetInterval - (timeSinceLastReset % resetInterval);
            return getCurrentMsWithTimezone() + timeUntilNextReset;
          }

          function updateClock() {
            const nextResetTime = getNextResetTime();
            const timeLeft = calculateTimeLeft(nextResetTime);
            updateClockLogic(timeLeft);
          }

          updateClock();
          this.timeinterval = setInterval(updateClock, 1000);

        } else {
          function updateClock() {
            const timeLeft = calculateTimeLeft(endMs);
            updateClockLogic(timeLeft);
          }

          updateClock();
          this.timeinterval = setInterval(updateClock, 1000);
        }
      }
    }

    if (!customElements.get('dp-countdown-timer')) {
      customElements.define('dp-countdown-timer', CountdownTimer);
    }
  </script>
