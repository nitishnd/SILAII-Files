{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-parallax-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-parallax-banner__image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    will-change: transform;
  }

  .ai-parallax-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-parallax-banner__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-parallax-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-parallax-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-parallax-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_alignment_vertical }};
    align-items: {{ block.settings.content_alignment_horizontal }};
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-parallax-banner__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    text-transform: {{ block.settings.heading_transform }};
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity | divided_by: 100.0 }});
  }

  @media screen and (max-width: 749px) {
    .ai-parallax-banner-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-parallax-banner__content-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-parallax-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }
  }
{% endstyle %}

<parallax-banner-{{ ai_gen_id }}
  class="ai-parallax-banner-{{ ai_gen_id }}"
  data-parallax-speed="{{ block.settings.parallax_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-parallax-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image %}
      <img
        src="{{ block.settings.banner_image | image_url: width: 2400 }}"
        alt="{{ block.settings.banner_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_image.width }}"
        height="{{ block.settings.banner_image.height }}"
        class="ai-parallax-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-parallax-banner__image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-parallax-banner__empty-state-{{ ai_gen_id }}">
          Add a banner image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-parallax-banner__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-parallax-banner__content-{{ ai_gen_id }}">
    {% if block.settings.heading_text != blank %}
      <h1 class="ai-parallax-banner__heading-{{ ai_gen_id }}">
        {{ block.settings.heading_text }}
      </h1>
    {% endif %}
  </div>
</parallax-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ParallaxBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.imageWrapper = this.querySelector('.ai-parallax-banner__image-wrapper-{{ ai_gen_id }}');
        this.parallaxSpeed = parseFloat(this.dataset.parallaxSpeed) || 0.5;
        this.handleScroll = this.handleScroll.bind(this);
      }

      connectedCallback() {
        if (window.matchMedia('(min-width: 750px)').matches) {
          window.addEventListener('scroll', this.handleScroll, { passive: true });
          this.handleScroll();
        }
      }

      disconnectedCallback() {
        window.removeEventListener('scroll', this.handleScroll);
      }

      handleScroll() {
        const rect = this.getBoundingClientRect();
        const scrolled = window.pageYOffset;
        const elementTop = rect.top + scrolled;
        const windowHeight = window.innerHeight;

        if (rect.top < windowHeight && rect.bottom > 0) {
          const yPos = (scrolled - elementTop) * this.parallaxSpeed;
          this.imageWrapper.style.transform = `translate3d(0, ${yPos}px, 0)`;
        }
      }
    }

    customElements.define('parallax-banner-{{ ai_gen_id }}', ParallaxBanner{{ ai_gen_id }});
  })();
</script>

