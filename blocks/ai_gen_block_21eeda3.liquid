{% doc %}
  @prompt
    SILAII X BAAHUBALI marquee text layout beautifully highlighted
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-marquee-container-{{ ai_gen_id }}::before,
  .ai-marquee-container-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50px;
    z-index: 2;
    pointer-events: none;
  }

  .ai-marquee-container-{{ ai_gen_id }}::before {
    left: 0;
    background: linear-gradient(to right, {{ block.settings.background_color }}, transparent);
  }

  .ai-marquee-container-{{ ai_gen_id }}::after {
    right: 0;
    background: linear-gradient(to left, {{ block.settings.background_color }}, transparent);
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    padding: 0 {{ block.settings.spacing }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    margin: 0;
    padding: 0 {{ block.settings.spacing }}px;
    position: relative;
    display: inline-block;
  }

  {% if block.settings.highlight_style == 'gradient' %}
    .ai-marquee-text-{{ ai_gen_id }} {
      background: linear-gradient(
        {{ block.settings.gradient_angle }}deg,
        {{ block.settings.highlight_color_1 }},
        {{ block.settings.highlight_color_2 }}
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  {% elsif block.settings.highlight_style == 'outline' %}
    .ai-marquee-text-{{ ai_gen_id }} {
      -webkit-text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};
      color: {{ block.settings.text_color }};
    }
  {% elsif block.settings.highlight_style == 'shadow' %}
    .ai-marquee-text-{{ ai_gen_id }} {
      text-shadow: 
        {{ block.settings.shadow_offset_x }}px 
        {{ block.settings.shadow_offset_y }}px 
        {{ block.settings.shadow_blur }}px 
        {{ block.settings.shadow_color }};
    }
  {% elsif block.settings.highlight_style == 'glow' %}
    .ai-marquee-text-{{ ai_gen_id }} {
      text-shadow: 
        0 0 {{ block.settings.glow_intensity }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }};
    }
  {% elsif block.settings.highlight_style == 'underline' %}
    .ai-marquee-text-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      bottom: {{ block.settings.underline_offset }}px;
      left: 0;
      right: 0;
      height: {{ block.settings.underline_height }}px;
      background: {{ block.settings.underline_color }};
    }
  {% endif %}

  .ai-marquee-separator-{{ ai_gen_id }} {
    display: inline-block;
    width: {{ block.settings.separator_size }}px;
    height: {{ block.settings.separator_size }}px;
    background: {{ block.settings.separator_color }};
    border-radius: 50%;
    margin: 0 {{ block.settings.spacing }}px;
    flex-shrink: 0;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-track-{{ ai_gen_id }} {
    animation-play-state: paused;
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.7 }}px;
    }

    .ai-marquee-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px 0;
    }
  }
{% endstyle %}

<div class="ai-marquee-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      <div class="ai-marquee-content-{{ ai_gen_id }}">
        {% for j in (1..block.settings.repeat_count) %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}"></span>
          {% endif %}
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

