      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "header",
      "content": "Divider"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "Show divider",
      "default": true
    },
    {
      "type": "range",
      "id": "divider_width",
      "min": 20,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Width",
      "default": 80
    },
    {
      "type": "range",
      "id": "divider_height",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Height",
      "default": 3
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Color",
