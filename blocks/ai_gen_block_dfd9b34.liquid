{% doc %}
  @prompt
    heading text line for a Movie merchandise page 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-movie-heading-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-movie-heading__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-movie-heading__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing }}px;
    font-weight: {{ block.settings.heading_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height: 1.2;
  }

  .ai-movie-heading__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    font-weight: {{ block.settings.subtitle_weight }};
    line-height: 1.4;
  }

  .ai-movie-heading__divider-{{ ai_gen_id }} {
    width: {{ block.settings.divider_width }}px;
    height: {{ block.settings.divider_height }}px;
    background-color: {{ block.settings.divider_color }};
    margin: {{ block.settings.spacing }}px auto;
  }

  @media screen and (max-width: 749px) {
    .ai-movie-heading__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-movie-heading__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-movie-heading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-movie-heading__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-movie-heading__title-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.show_divider %}
      <div class="ai-movie-heading__divider-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <div class="ai-movie-heading__subtitle-{{ ai_gen_id }}">
        {{ block.settings.subtitle }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Movie merchandise heading",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
