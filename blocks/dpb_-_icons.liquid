{%- capture css_styles -%}
<style data-dp-css="blocks/_dpb_-_icons.liquid">

  [id*=preview-block] .dsgn-pck__icons {
    container-type: normal !important;
  }

  .dsgn-pck__block-id-{{ block.id }} {
    width: {{ block.settings.base_width }}%;
    max-width: {{ block.settings.max_width | remove: 'px' }}px;
    --flex-gap: {{ block.settings.gap }}px;
    --icon-text-gap: {{ block.settings.icon_gap }}px;
    display: flex;
    {%- if block.settings.horizontal_alignment == 'left' -%}
      align-self: flex-start;
      margin-left: 0;
      margin-right: auto;
      --block-horizontal-alignment: flex-start;
    {%- elsif block.settings.horizontal_alignment == 'right' -%}
      align-self: flex-end;
      margin-left: auto;
      margin-right: 0;
      --block-horizontal-alignment: flex-end;
    {%- elsif block.settings.horizontal_alignment == 'center' -%}
      align-self: center;
      margin-left: auto;
      margin-right: auto;
      --block-horizontal-alignment: center;
    {%- endif -%}
    --section-horizontal-alignment: {%- if section.settings.text_alignment == 'center' -%}center{%- elsif section.settings.text_alignment == 'right' -%}flex-end{%- endif -%};
    align-self: var(--block-horizontal-alignment, var(--section-horizontal-alignment));
    {%- if block.settings.enable_custom_font_size == true and block.settings.icon_heading_size != blank -%}
      --icon-heading-size: calc({{ block.settings.icon_heading_size }} * {{ section.settings.text_size | default: 100 | times: 0.01 }});
    {%- else -%}
      --icon-heading-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 20px)) * {{ section.settings.text_size | default: 100 | times: 0.01 }});
    {%- endif -%}
    {%- if block.settings.enable_custom_font_size == true and block.settings.icon_text_size != blank -%}
      --icon-text-size: calc({{ block.settings.icon_text_size }} * {{ section.settings.text_size | default: 100 | times: 0.01 }});
    {%- else -%}
      --icon-text-size: calc(var(--dp-g-body-size, var(--dp-body-size, 16px)) * {{ section.settings.text_size | default: 100 | times: 0.01 }});
    {%- endif -%}
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icons {
    container-type: inline-size;
    container-name: dp-icons-container;
    display: flex;
    gap: var(--flex-gap);
    flex-wrap: wrap;
    width: 100%;
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
    --flex-items: {{ 100.00 | divided_by: block.settings.icon_width }};
    text-align: center;
    flex: 0 1 calc((100% / var(--flex-items)) - (((var(--flex-items) - 1) / var(--flex-items)) * var(--flex-gap)));
    width: calc((100% / var(--flex-items)) - (((var(--flex-items) - 1) / var(--flex-items)) * var(--flex-gap)));
    --icon-size: {% if block.settings.icon_size_type == 'percentage' %}{{ block.settings.image_size }}%{% else %}{{ block.settings.image_size_fixed }}px{% endif %};
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
    position: relative;
    width: var(--icon-size);
    max-width: var(--icon-size);
    height: auto;
    display: inline-block;
    font-size: 0;
  }

  .dsgn-pck__block-id-{{ block.id }} svg.dsgn-pck__svg-sizer {
    width: 100%;
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-heading {
    margin-bottom: 5px;
    font-size: var(--icon-heading-size);
    {%- if section.settings.override_theme_font != blank -%}
    font-family: var(--heading-font);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    {%- endif -%}
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__small-heading + .dsgn-pck__icon-text {
    margin-top: 5px;
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-text {
    font-size: var(--icon-text-size);
    {%- if section.settings.override_theme_font != blank -%}
    font-family: var(--main-font);
    font-weight: var(--main-font-weight);
    font-style: var(--main-font-style);
    {%- endif -%}
  }

  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon a,
  .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon p {
    color: {{ section.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    text-decoration: none;
  }

  {%- if block.settings.icon_layout == 'left' -%}
    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: var(--icon-text-gap);
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
      flex: 0 0 {% if block.settings.icon_size_type == 'percentage' %}{{ block.settings.image_size }}%{% else %}{{ block.settings.image_size_fixed }}px{% endif %};
      max-width: {% if block.settings.icon_size_type == 'percentage' %}{{ block.settings.image_size }}%{% else %}{{ block.settings.image_size_fixed }}px{% endif %};
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
      flex: 1 1 auto;
      text-align: left;
    }

  {%- elsif block.settings.icon_layout == 'right' -%}
    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
      display: flex;
      flex-direction: row-reverse;
      align-items: center;
      gap: var(--icon-text-gap);
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
      flex: 0 0 var(--icon-size);
      max-width: var(--icon-size);
      width: var(--icon-size);
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
      flex: 1 1 auto;
      text-align: right;
    }

  {%- elsif block.settings.icon_layout == 'top' -%}
    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: {{ block.settings.icon_gap }}px;
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
      text-align: center;
      flex: 1;
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
      flex: 0 0 auto;
      max-width: var(--icon-size);
      width: var(--icon-size);
    }

  {%- elsif block.settings.icon_layout == 'bottom' -%}
    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
      display: flex;
      flex-direction: column-reverse;
      align-items: center;
      gap: {{ block.settings.icon_gap }}px;
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
      flex: 0 0 var(--icon-size);
      max-width: var(--icon-size);
      width: var(--icon-size);
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
      text-align: center;
      flex: 1;
    }

  {%- endif -%}

  {%- if block.settings.icon_layout == 'top' or block.settings.icon_layout == 'bottom' -%}
    {%- if block.settings.icon_alignment == 'left' -%}
      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
        align-items: flex-start;
      }

      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
        text-align: left;
      }

    {%- elsif block.settings.icon_alignment == 'right' -%}
      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
        align-items: flex-end;
      }

      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
        text-align: right;
      }

    {%- endif -%}
  {%- endif -%}

  /* Custom CSS */
  {%- if block.settings.enable_custom_css == true and block.settings.custom_css != blank -%}
    {%- assign custom_css_rules = block.settings.custom_css | strip | split: '}' -%}
    {%- for rule in custom_css_rules -%}
      {%- assign clean_rule = rule | strip -%}
      {%- if clean_rule contains '{' and clean_rule != blank -%}
        {%- assign rule_parts = clean_rule | split: '{' -%}
        {%- if rule_parts.size >= 2 -%}
          {%- assign selector_part = rule_parts[0] | strip -%}
          {%- assign css_part = rule_parts[1] | strip -%}
          {%- if css_part != blank -%}
            {%- if selector_part == blank -%}
              #DP--{{ block.id }} { {{ css_part }} }
            {%- else -%}
              #DP--{{ block.id }} {{ selector_part }} { {{ css_part }} }
            {%- endif -%}
          {%- endif -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}

  /* Small context - small container and mobile */
  {%- capture small_context -%}
    {%- if block.settings.mobile_styles == true -%}
      .dsgn-pck__block-id-{{ block.id }} {
        --flex-gap: {{ block.settings.mobile_gap }}px;
      }

      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
        --flex-items: {{ 100.00 | divided_by: block.settings.mobile_icon_width }};
        --icon-text-gap: {{ block.settings.mobile_icon_gap }}px;
        --icon-size: {% if block.settings.mobile_icon_size_type == 'percentage' %}{{ block.settings.mobile_image_size }}%{% else %}{{ block.settings.mobile_image_size_fixed }}px{% endif %};
      }

      {%- if block.settings.mobile_icon_layout == 'left' or block.settings.mobile_icon_layout == 'right' -%}
        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
          display: flex;
          flex-direction: {% if block.settings.mobile_icon_layout == 'left' %}row{% else %}row-reverse{% endif %};
          gap: var(--icon-text-gap);
          justify-content: {{ block.settings.mobile_icon_layout }};
        }

        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
          flex: 0 0 var(--icon-size);
          max-width: var(--icon-size);
          width: var(--icon-size);
        }

        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
          flex: 1 1 auto;
          text-align: {{ block.settings.mobile_icon_layout }};
        }

      {%- elsif block.settings.mobile_icon_layout == 'top' or block.settings.mobile_icon_layout == 'bottom' -%}
        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon {
          display: flex;
          {%- if block.settings.mobile_icon_layout == 'top' -%}
            flex-direction: column;
          {%- else -%}
            flex-direction: column-reverse;
          {%- endif -%}
          align-items: center;
          gap: {{ block.settings.mobile_icon_gap }}px;
          justify-content: {{ block.settings.mobile_icon_alignment }};
        }

        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__image__wrapper {
          flex: 0 0 var(--icon-size);
          max-width: var(--icon-size);
          width: var(--icon-size);
          flex: 1;
          align-self: {% if block.settings.mobile_icon_alignment == 'left' %}flex-start{% elsif block.settings.mobile_icon_alignment == 'right' %}flex-end{% else %}center{% endif %};
        }

        .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-content {
          text-align: {{ block.settings.mobile_icon_alignment }};
          flex: 1;
          width: 100%;
        }

      {%- endif -%}
      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-heading {
        {%- if block.settings.mobile_icon_heading_size != blank and block.settings.enable_custom_font_size == true -%}
          font-size: {{ block.settings.mobile_icon_heading_size }};
        {%- elsif block.settings.enable_custom_font_size == true and block.settings.icon_heading_size != blank -%}
          font-size: calc({{ block.settings.icon_heading_size | remove: 'px' | times: 0.75 | round: 0 | at_least: 12 }}px * {{ section.settings.text_size | default: 100 | times: 0.01 }});
        {%- endif -%}
      }
      .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__icon-text {
        {%- if block.settings.mobile_icon_text_size != blank and block.settings.enable_custom_font_size == true -%}
          font-size: {{ block.settings.mobile_icon_text_size }};
        {%- elsif block.settings.enable_custom_font_size == true and block.settings.icon_text_size != blank -%}
          font-size: calc({{ block.settings.icon_text_size | remove: 'px' | times: 0.75 | round: 0 | at_least: 10 }}px * {{ section.settings.text_size | default: 100 | times: 0.01 }});
        {%- endif -%}
      }
    {%- endif -%}

  /* Mobile & narrow custom CSS */
  {%- if block.settings.enable_custom_css == true and block.settings.mobile_css != blank -%}
    {%- assign mobile_css_rules = block.settings.mobile_css | strip | split: '}' -%}
    {%- for rule in mobile_css_rules -%}
      {%- assign clean_rule = rule | strip -%}
      {%- if clean_rule contains '{' and clean_rule != blank -%}
        {%- assign rule_parts = clean_rule | split: '{' -%}
        {%- if rule_parts.size >= 2 -%}
          {%- assign selector_part = rule_parts[0] | strip -%}
          {%- assign css_part = rule_parts[1] | strip -%}
          {%- if css_part != blank -%}
            {%- if selector_part == blank -%}
              #DP--{{ block.id }} { {{ css_part }} }
            {%- else -%}
              #DP--{{ block.id }} {{ selector_part }} { {{ css_part }} }
            {%- endif -%}
          {%- endif -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  {%- endcapture -%}

  @supports (container-type: inline-size) {
    @container dp-icons-container (max-width: 300px) {
      {{ small_context }}
    }
  }

  @media (max-width: 767px) {
    {{ small_context }}
  }

  /* Hide or show on mobile and desktop */
  {%- if block.settings.hidden_on == 'mobile' -%}
    @media (max-width: 767px) {
      .dsgn-pck__block-id-{{ block.id }} {
        display: none;
      }
    }
  {%- endif -%}

  {%- if block.settings.hidden_on == 'desktop' -%}
    @media (min-width: 768px) {
      .dsgn-pck__block-id-{{ block.id }} {
        display: none;
      }
    }
  {%- endif -%}
</style>
{%- endcapture -%}

<div id="DP--{{ block.id }}" class="DP--{{ block.id }} dsgn-pck__block dsgn-pck__block-id-{{ block.id }} dsgn-pck__block--{{ block.type }} dsgn-pck__block--{{ block.index }}" {{ block.shopify_attributes }} {% if section.settings.animation != blank %}style="--dsgn-pck-animate: {{ block_index }};"{% endif %}>
