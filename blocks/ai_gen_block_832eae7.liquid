{% doc %}
  @prompt
    SILAII x BAAHUBALI scroll marquee layout 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 0 {{ block.settings.item_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  {% if block.settings.text_transform == 'uppercase' %}
    .ai-marquee-item-{{ ai_gen_id }} {
      text-transform: uppercase;
    }
  {% elsif block.settings.text_transform == 'lowercase' %}
    .ai-marquee-item-{{ ai_gen_id }} {
      text-transform: lowercase;
    }
  {% endif %}

  .ai-marquee-separator-{{ ai_gen_id }} {
    display: inline-block;
    width: {{ block.settings.separator_size }}px;
    height: {{ block.settings.separator_size }}px;
    background-color: {{ block.settings.separator_color }};
    border-radius: 50%;
    margin: 0 {{ block.settings.item_spacing }}px;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-wrapper-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
      padding: 0 {{ block.settings.item_spacing | times: 0.7 }}px;
    }

    .ai-marquee-separator-{{ ai_gen_id }} {
      width: {{ block.settings.separator_size | times: 0.8 }}px;
      height: {{ block.settings.separator_size | times: 0.8 }}px;
      margin: 0 {{ block.settings.item_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-marquee-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
    <div class="ai-marquee-content-{{ ai_gen_id }}">
      {% for i in (1..block.settings.repeat_count) %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}"></span>
      {% endfor %}
    </div>
    <div class="ai-marquee-content-{{ ai_gen_id }}" aria-hidden="true">
      {% for i in (1..block.settings.repeat_count) %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}"></span>
      {% endfor %}
    </div>
  </div>
</div>

