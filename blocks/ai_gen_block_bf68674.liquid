{% doc %}
  @prompt
    this layout is text layout Heading and Sub heading and paragraph text, mentioning about the movie greatness with visually great minimal clean layout, highlighting the features of the movie
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-movie-features-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-movie-features__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-movie-features__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
    text-transform: {{ block.settings.subheading_transform }};
    font-weight: {{ block.settings.subheading_weight }};
  }

  .ai-movie-features__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: {{ block.settings.heading_line_height }};
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-movie-features__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: {{ block.settings.description_line_height }};
    margin: 0 0 {{ block.settings.features_spacing }}px;
  }

  .ai-movie-features__features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.features_columns }}, 1fr);
    gap: {{ block.settings.features_gap }}px;
    margin-top: {{ block.settings.features_spacing }}px;
  }

  .ai-movie-features__feature-{{ ai_gen_id }} {
    padding: {{ block.settings.feature_padding }}px;
    background-color: {{ block.settings.feature_bg_color }};
    border-radius: {{ block.settings.feature_border_radius }}px;
    border: {{ block.settings.feature_border_width }}px solid {{ block.settings.feature_border_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  {% if block.settings.enable_feature_hover %}
    .ai-movie-features__feature-{{ ai_gen_id }}:hover {
      transform: translateY(-{{ block.settings.hover_lift }}px);
      box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
    }
  {% endif %}

  .ai-movie-features__feature-icon-{{ ai_gen_id }} {
    font-size: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_spacing }}px;
    display: block;
  }

  .ai-movie-features__feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    color: {{ block.settings.feature_title_color }};
    margin: 0 0 {{ block.settings.feature_title_spacing }}px;
    font-weight: {{ block.settings.feature_title_weight }};
  }

  .ai-movie-features__feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.feature_text_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-movie-features-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-movie-features__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-movie-features__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-movie-features__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-movie-features__features-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.features_columns_mobile }}, 1fr);
      gap: {{ block.settings.features_gap | times: 0.7 }}px;
    }

    .ai-movie-features__feature-{{ ai_gen_id }} {
      padding: {{ block.settings.feature_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-movie-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-movie-features__container-{{ ai_gen_id }}">
    {% if block.settings.subheading != blank %}
      <div class="ai-movie-features__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-movie-features__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-movie-features__description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    <div class="ai-movie-features__features-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign feature_enabled_key = 'feature_' | append: i | append: '_enabled'
          assign feature_icon_key = 'feature_' | append: i | append: '_icon'
          assign feature_title_key = 'feature_' | append: i | append: '_title'
          assign feature_text_key = 'feature_' | append: i | append: '_text'

          assign feature_enabled = block.settings[feature_enabled_key]
          assign feature_icon = block.settings[feature_icon_key]
          assign feature_title = block.settings[feature_title_key]
          assign feature_text = block.settings[feature_text_key]
        %}

        {% if feature_enabled %}
          <div class="ai-movie-features__feature-{{ ai_gen_id }}">
            {% if feature_icon != blank %}
              <span class="ai-movie-features__feature-icon-{{ ai_gen_id }}">
                {{ feature_icon }}
              </span>
            {% endif %}

            {% if feature_title != blank %}
              <h3 class="ai-movie-features__feature-title-{{ ai_gen_id }}">
                {{ feature_title }}
              </h3>
            {% endif %}

            {% if feature_text != blank %}
              <div class="ai-movie-features__feature-text-{{ ai_gen_id }}">
                {{ feature_text }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

