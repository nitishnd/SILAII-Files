{%- assign section_id = section.id | replace: '+', '' | replace: '=', '' -%}
{%- assign block_index = section.blocks | find_index: 'id', block.id | plus: 1 -%}

{% comment %} Images: responsive image widths {% endcomment %}
{%- assign widths = '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1950, 2100, 2260, 2450, 2700, 3000, 3350, 3750, 4100' -%}

{%- comment -%} Color: check if color is set to transparent {%- endcomment -%}
{%- assign text_alpha = block.settings.text_color | color_extract: 'alpha' -%}
{%- assign background_alpha = block.settings.background_solid | color_extract: 'alpha' -%}
{%- assign border_color_alpha = block.settings.border_color | color_extract: 'alpha' -%}

{%- capture css_styles -%}
  <style data-dp-css="blocks/_dpb_-_button.liquid">
    {%- if block.settings.enable_custom_font != blank -%}
      {{ block.settings.custom_font | font_face: font_display: 'swap' }}
      {{ block.settings.custom_font | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}
      {{ block.settings.custom_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
      {{ block.settings.custom_font | font_modify: 'style', 'italic' | font_modify: 'weight', 'bolder' | font_face: font_display: 'swap' }}
      .dsgn-pck__block-id-{{ block.id }} {
        --custom-font: {{ block.settings.custom_font.family }}, {{ block.settings.custom_font.fallback_families }};
        --custom-font-weight: {{ block.settings.custom_font.weight }};
        --custom-font-style: {{ block.settings.custom_font.style }};
      }
    {% endif %}

    .dsgn-pck__block-id-{{ block.id }} {
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      gap: 0.5rem;
      line-height: var(--dp-g-button-line-height, var(--dp-button-line-height, calc(3px + 2ex + 3px)));
      text-decoration: none;
      {%- if block.settings.padding_type == 'custom' -%}
        padding: {{ block.settings.padding }};
      {%- elsif block.settings.padding_type == 'range' -%}
        padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
      {%- else -%}
        padding: var(--dp-button-padding, 0.5em 1.2em);
      {%- endif -%}
      border-radius: {{ block.settings.border_radius }}px;
      transition: all 0.3s ease;
      {%- if text_alpha != 0 -%}
        color: {{ block.settings.text_color }};
      {%- endif -%}
      {%- if background_alpha != 0 -%}
        background-color: {{ block.settings.background_solid }};
      {%- endif -%}
      {%- if block.settings.background_color != blank -%}
        background: {{ block.settings.background_color }};
      {%- endif -%}
      {%- if block.settings.border_width > 0 and border_color_alpha != 0 -%}
        border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
      {%- endif -%}
      {%- if block.settings.enable_custom_font != blank -%}
        font-family: var(--custom-font);
        font-weight: var(--custom-font-weight);
        font-style: var(--custom-font-style);
      {%- endif -%}
      {%- if block.settings.block_text_size != blank and block.settings.enable_custom_text_size == true -%}
        font-size: calc({{ block.settings.block_text_size }} * {{ section.settings.text_size | default: 100 | times: 0.01 }});
      {%- else -%}
        font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | default: 100 | times: 0.01 }});
      {%- endif -%}
      {%- if block.settings.enable_text_underline -%}
        text-decoration: underline;
      {%- endif -%}
      {%- if block.settings.enable_custom_text_style -%}
        {%- if block.settings.text_style == 'italic' -%}
          font-style: italic;
        {%- elsif block.settings.text_style == 'bold' -%}
          font-weight: bold;
        {%- elsif block.settings.text_style == 'bold_italic' -%}
          font-weight: bold;
          font-style: italic;
        {%- endif -%}
        {%- if block.settings.text_transform != 'none' -%}
          text-transform: {{ block.settings.text_transform }};
        {%- endif -%}
        {%- if block.settings.letter_spacing != blank -%}
          letter-spacing: {{ block.settings.letter_spacing }};
        {%- endif -%}
        {%- if block.settings.line_height != blank -%}
          line-height: {{ block.settings.line_height }};
        {%- endif -%}
      {%- endif -%}
      {%- if block.settings.size == 'custom' -%}
        {%- assign gap_adjustment = 100 | minus: block.settings.custom_size | divided_by: 100.0 -%}
        width: calc({{ block.settings.custom_size }}% - (var(--button-gap, 0px) * {{ gap_adjustment }}));
      {%- else -%}
        width: fit-content;
      {%- endif -%}
      {%- if block.settings.link == blank -%}
        cursor: default;
      {%- endif -%}
      {% case block.settings.button_shadow %}
        {% when 'subtle' %}box-shadow: 0 1px 4px 0 {{ block.settings.button_shadow_color }}33;
        {% when 'medium' %}box-shadow: 0 2px 8px 0 {{ block.settings.button_shadow_color }}55;
        {% when 'strong' %}box-shadow: 0 4px 16px 0 {{ block.settings.button_shadow_color }}88;
        {% when 'custom' %}box-shadow: {{ block.settings.button_shadow_custom }};
        {% else %}box-shadow: none;
      {% endcase %}
      {%- if block.settings.horizontal_alignment == 'left' -%}
        align-self: flex-start;
        margin-left: 0;
        margin-right: auto;
        --block-horizontal-alignment: flex-start;
      {%- elsif block.settings.horizontal_alignment == 'right' -%}
        align-self: flex-end;
        margin-left: auto;
        margin-right: 0;
        --block-horizontal-alignment: flex-end;
      {%- elsif block.settings.horizontal_alignment == 'center' -%}
        align-self: center;
        margin-left: auto;
        margin-right: auto;
        --block-horizontal-alignment: center;
      {%- endif -%}
      --section-horizontal-alignment: {%- if section.settings.text_alignment == 'center' -%}center{%- elsif section.settings.text_alignment == 'right' -%}flex-end{%- endif -%};
      align-self: var(--block-horizontal-alignment, var(--section-horizontal-alignment));
    }

    .DP--{{ section_id }} .dsgn-pck__block-id-{{ block.id }} {
      {%- if text_alpha != 0 -%}
        color: {{ block.settings.text_color }};
      {%- endif -%}
    }

    {% if block.settings.enable_hover_effects_all %}
      .dsgn-pck__block-id-{{ block.id }}:hover {
        opacity: 1;
        transform: none;
        {%- if block.settings.button_label_color_hover != blank -%}
          color: {{ block.settings.button_label_color_hover }};
        {%- endif -%}
        {%- if block.settings.button_background_color_hover != blank -%}
          background: {{ block.settings.button_background_color_hover }};
        {%- endif -%}
        {%- if block.settings.button_border_color_hover != blank and block.settings.border_width > 0 -%}
          border-color: {{ block.settings.button_border_color_hover }};
        {%- endif -%}
        {% case block.settings.button_shadow_hover %}
          {% when 'subtle' %}box-shadow: 0 1px 4px 0 {{ block.settings.button_shadow_color_hover }}33;
          {% when 'medium' %}box-shadow: 0 2px 8px 0 {{ block.settings.button_shadow_color_hover }}55;
          {% when 'strong' %}box-shadow: 0 4px 16px 0 {{ block.settings.button_shadow_color_hover }}88;
          {% when 'custom' %}box-shadow: {{ block.settings.button_shadow_custom_hover }};
          {% when 'none' %}box-shadow: none;
        {% endcase %}
        {%- if block.settings.button_translate_x != blank or block.settings.button_translate_y != blank -%}
          transform: translate({{ block.settings.button_translate_x | default: 0 }}, {{ block.settings.button_translate_y | default: 0 }});
        {%- endif -%}
      }
    {% endif %}

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__button-icon {
      flex-shrink: 0;
      width: 1.5rem;
      height: 1.5rem;
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__button-icon {
      width: 100%;
      height: 100%;
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__button-icon {
      width: 1.5rem;
      height: 1.5rem;
      object-fit: contain;
      {%- if block.settings.icon_position == 'right' -%}
        order: 2;
      {%- endif -%}
    }

    .dsgn-pck__block-id-{{ block.id }} .dsgn-pck__button-text {
      {%- if block.settings.icon_position == 'right' -%}
        order: 1;
      {%- endif -%}
    }

    /* Animation */
    {% comment %} .dsgn-pck__animation-applied .dsgn-pck__block-id-{{ block.id }}[style*="--dsgn-pck-animate"] {
      animation-name: {% if block.settings.animation != 'none' %}dsgn-pck__animation--{{ block.settings.animation }}{% else %}dsgn-pck__animation--{{ section.settings.animation }}{% endif %};
    } {% endcomment %}

    /* Custom CSS */
    {%- if block.settings.enable_custom_css == true and block.settings.custom_css != blank -%}
      {%- assign custom_css_rules = block.settings.custom_css | strip | split: '}' -%}
      {%- for rule in custom_css_rules -%}
        {%- assign clean_rule = rule | strip -%}
        {%- if clean_rule contains '{' and clean_rule != blank -%}
          {%- assign rule_parts = clean_rule | split: '{' -%}
          {%- if rule_parts.size >= 2 -%}
            {%- assign selector_part = rule_parts[0] | strip -%}
            {%- assign css_part = rule_parts[1] | strip -%}
            {%- if css_part != blank -%}
              {%- if selector_part == blank -%}
                .dsgn-pck__block-id-{{ block.id }} { {{ css_part }} }
              {%- else -%}
                .dsgn-pck__block-id-{{ block.id }} {{ selector_part }} { {{ css_part }} }
              {%- endif -%}
            {%- endif -%}
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}

    /* Mobile styles */
    @media (max-width: 767px) {
      .dsgn-pck__block-id-{{ block.id }} {
        {%- if block.settings.enable_custom_text_size == true and block.settings.mobile_block_text_size != blank -%}
          font-size: calc({{ block.settings.mobile_block_text_size }} * {{ section.settings.text_size | default: 100 | times: 0.01 }});
        {%- elsif block.settings.enable_custom_text_size == true and block.settings.block_text_size != blank -%}
          font-size: calc({{ block.settings.block_text_size }} * {{ section.settings.text_size | default: 100 | times: 0.01 }});
        {%- else -%}
          font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | default: 100 | times: 0.01 }});
        {%- endif -%}
        {%- if block.settings.mobile_styles == true -%}
          {%- if block.settings.mobile_size == 'custom' -%}
            {%- assign mobile_gap_adjustment = 100 | minus: block.settings.mobile_custom_size | divided_by: 100.0 -%}
            width: calc({{ block.settings.mobile_custom_size }}% - (var(--button-gap, 0px) * {{ mobile_gap_adjustment }}));
          {%- elsif block.settings.mobile_size == 'default' -%}
            width: fit-content;
          {%- endif -%}
        {%- endif -%}
      }

      {%- if block.settings.enable_custom_css == true and block.settings.mobile_css != blank -%}
        {%- assign mobile_css_rules = block.settings.mobile_css | strip | split: '}' -%}
        {%- for rule in mobile_css_rules -%}
          {%- assign clean_rule = rule | strip -%}
          {%- if clean_rule contains '{' and clean_rule != blank -%}
            {%- assign rule_parts = clean_rule | split: '{' -%}
            {%- if rule_parts.size >= 2 -%}
              {%- assign selector_part = rule_parts[0] | strip -%}
              {%- assign css_part = rule_parts[1] | strip -%}
              {%- if css_part != blank -%}
                {%- if selector_part == blank -%}
                  .dsgn-pck__block-id-{{ block.id }} { {{ css_part }} }
                {%- else -%}
                  .dsgn-pck__block-id-{{ block.id }} {{ selector_part }} { {{ css_part }} }
                {%- endif -%}
              {%- endif -%}
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
    }

    {%- if block.settings.hidden_on == 'mobile' -%}
      @media (max-width: 767px) {
        .dsgn-pck__block-id-{{ block.id }} {
          display: none;
        }
      }
    {%- endif -%}

    {%- if block.settings.hidden_on == 'desktop' -%}
      @media (min-width: 768px) {
        .dsgn-pck__block-id-{{ block.id }} {
          display: none;
        }
      }
    {%- endif -%}
  </style>
{%- endcapture -%}

{%- if block.settings.title != blank or block.settings.icon != blank -%}
  <a id="DP--{{ block.id }}" class="DP--{{ block.id }} dsgn-pck__block-id-{{ block.id }} dsgn-pck__button dsgn-pck__block {% if block.settings.button_class != 'custom' %}dsgn-pck__button-{{ block.settings.button_class }}{% else %}{{ block.settings.custom_classes }}{% endif %}" {%- if block.settings.link != blank -%}href="{{ block.settings.link }}"{%- endif -%} {{ block.shopify_attributes }} {% if section.settings.animation != blank %}style="--dsgn-pck-animate: {{ block_index }};"{% endif %}>
    {{ css_styles }}
    {%- if block.settings.icon != blank -%}
      {{ block.settings.icon | image_url: width: block.settings.icon.width | image_tag:  widths: widths, class: 'dsgn-pck__button-icon' }}
    {%- endif -%}
    {%- if block.settings.title != blank -%}
      <span class="dsgn-pck__button-text">
        {{ block.settings.title }}
      </span>
    {%- endif -%}
  </a>
{%- endif -%}

