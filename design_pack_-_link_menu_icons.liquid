{%- comment -%} Assign: Preview section js fix {%- endcomment -%}
{%- assign section_id = section.id | replace: '+', '' | replace: '=', '' -%}

{% comment %} Content: set template type {% endcomment %}
{% liquid
  assign template_type = template.name

  case template_type
    when 'collection'
      assign current_url = collection.url
    when 'page'
      assign current_url = page.url
    when 'blog'
      assign current_url = blog.url
    when 'article'
      assign current_url = article.url
    when 'product'
      assign current_url = product.url
    when 'list-collections'
      assign current_url = '/collections'
    when 'search'
      assign current_url = '/search'
    when 'index'
      assign current_url = '/'
    when 'cart'
      assign current_url = '/cart'
    else
      assign current_url = '/'
    endcase
%}

{% comment %} Images: responsive image widths {% endcomment %}
{%- assign widths = '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1950, 2100, 2260, 2450, 2700, 3000, 3350, 3750, 4100' -%}

{%- comment -%} Text: custom font_picker values {%- endcomment -%}
{%- capture font_settings_list -%}
{{ section.settings.main_font | font_face: font_display: 'swap' }}~
