#DP--{{ section.id }} {
  margin-top: {{ section.settings.outer_margin }}px;
  margin-bottom: {{ section.settings.outer_margin }}px;
  background: {{ section.settings.background_color }};
  --gutter: {{ section.settings.gap }}px;
}

#DP--{{ section.id }} .dsgn-pck__grid {
  gap: var(--gutter);
  padding-bottom: 2px;
  justify-content: space-between;
}

#DP--{{ section.id }} .dsgn-pck__grid-item {
  position: relative;
  height: 100%;
  overflow: hidden;
  transition: all .3s;
  display: flex;
  flex-direction: column;
  {%- if border_alpha != 0 -%}
    padding: 20px;
    border: thin solid {{ section.settings.border_color }};
  {%- endif -%}
  background: {{ section.settings.product_background_color }};
}

#DP--{{ section.id }} .dsgn-pck__absolute-link {
  z-index: 0;
}

#DP--{{ section.id }} .dsgn-pck__grid-item:hover {
  background: {{ section.settings.product_background_hover_color }};
}

#DP--{{ section.id }} .dsgn-pck__grid-item-content {
  display: flex;
  flex-direction: column;
  flex: 1 0 auto;
  transition: 0.3s linear;
}

#DP--{{ section.id }} .dsgn-pck__inner-content {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  text-align: center;
  position: relative;
  color: {{ section.settings.text_color }};
}

#DP--{{ section.id }} .dsgn-pck__text-content {
  width: 100%;
  pointer-events: none;
}

#DP--{{ section.id }} .dsgn-pck__small-heading {
  line-height: calc(3px + 2ex + 3px);
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-small-heading-size, var(--dp-small-heading-size, 24px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--heading-font);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  {%- endif -%}
}

#DP--{{ section.id }} .dsgn-pck__variant-title {
  font-size: smaller;
  display: block;
}

#DP--{{ section.id }} .dsgn-pck__rte p,
#DP--{{ section.id }} .dsgn-pck__rte ul {
  line-height: calc(3px + 2.5ex + 3px);
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

#DP--{{ section.id }} .dsgn-pck__product-money_was-price {
  text-decoration: line-through;
  color: {{ section.settings.text_color | color_modify: 'alpha', 0.5 }};
}

#DP--{{ section.id }} .dsgn-pck__price-saving {
  display: inline-block;
  padding: 0 5px;
  border: thin solid currentColor;
  margin: 1px 1ex;
}

#DP--{{ section.id }} .dsgn-pck__product-tag--image {
  z-index: 2;
  position: absolute;
  top: 5px;
  right: 5px;
}

#DP--{{ section.id }} .dsgn-pck__product-tag {
  display: inline-block;
  text-transform: uppercase;
  padding: 2px 5px;
  line-height: 1.1;
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.008 }});
}

#DP--{{ section.id }} .dsgn-pck__block--title,
#DP--{{ section.id }} .dsgn-pck__block--vendor,
#DP--{{ section.id }} .dsgn-pck__block--price,
#DP--{{ section.id }} .dsgn-pck__block--custom_text,
#DP--{{ section.id }} .dsgn-pck__block--liquid   {
  {% if product_alpha != blank and border_alpha == 0 %}
    padding: 0 20px;
  {% endif %}
}

#DP--{{ section.id }} .dsgn-pck__block--title,
#DP--{{ section.id }} .dsgn-pck__block--vendor,
#DP--{{ section.id }} .dsgn-pck__block--price,
#DP--{{ section.id }} .dsgn-pck__block--custom_text {
  pointer-events: none;
}

#DP--{{ section.id }} .dsgn-pck__item {
  width: 100%;
}

#DP--{{ section.id }} .dsgn-pck__product-card__image {
  position: relative;
  display: block;
  margin-bottom: 0;
  z-index: 0;
}

#DP--{{ section.id }} .dsgn-pck__product-card__image.dsgn-pack__secondary-image--true:hover .dsgn-pck__product-image__second {
  opacity: 1;
}

#DP--{{ section.id }} .dsgn-pck__product-image__first {
  position: relative;
}

#DP--{{ section.id }} .dsgn-pck__product-image__second {
  opacity: 0;
  z-index: 1;
  position: absolute;
  transition: opacity .2s ease-in-out;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

#DP--{{ section.id }} .dsgn-pck__product-image__second .dsgn-pck__image__wrapper {
  height: 100%;
}

#DP--{{ section.id }} .dsgn-pck__product-image__second img {
  object-fit: cover;
  height: 100%;
}

#DP--{{ section.id }} .dsgn-pck__block {
  color: {{ section.settings.text_color }};
}

#DP--{{ section.id }} .dsgn-pck__block:not(:empty) + .dsgn-pck__block {
  margin-top: 10px;
}

#DP--{{ section.id }} .dsgn-pck__pagination {
  margin: 20px 0;
  line-height: 1.1;
  text-align: center;
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

/* Flickity custom styles */
#DP--{{ section.id }} .flickity-page-dots {
  bottom: 8px;
}

#DP--{{ section.id }} .flickity-prev-next-button {
  width: 30px;
  height: 30px;
}

#DP--{{ section.id }} .flickity-page-dots .dot {
  background: {{ section.settings.arrow_dot_color }};
}

#DP--{{ section.id }} .flickity-button {
  background: {%- if section.settings.text_background_color != blank -%}{{ section.settings.arrow_background_color }}{%- else -%}transparent{%- endif -%};
  color: {{ section.settings.arrow_dot_color }};
}

#DP--{{ section.id }} .flickity-prev-next-button .flickity-button-icon {
  left: 25%;
  top: 25%;
  width: 50%;
  height: 50%;
}

#DP--{{ section.id }} .dsgn-pck__sizer {
  padding-top: {{ section.settings.inner_padding }}px;
  padding-bottom: {{ section.settings.inner_padding }}px;
  width: {{ section.settings.base_width }}%;
  max-width: {{ max_width }};
}

{%- if section.settings.custom_css != blank -%}
  {%- assign custom_section_declarations = section.settings.custom_css | split: '}' -%}
  {%- for declaration in custom_section_declarations -%}
    {%- if declaration contains '{' -%}
      #DP--{{ section.id }} {{ declaration }} }
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

/* Landscape phone to portrait tablet */
@media (max-width: 767px) {
  #DP--{{ section.id }} .dsgn-pck__collection-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {

  #DP--{{ section.id }} {
    margin-top: {{ section.settings.outer_margin }}px;
    margin-bottom: {{ section.settings.outer_margin }}px;
    background: {{ section.settings.background_color }};
    --gutter: {{ section.settings.gap | times: 0.75 | round: 0 }}px;
  }

  #DP--{{ section.id }} .dsgn-pck__grid-item {
    {%- if border_alpha != 0 -%}
      padding: 15px;
    {%- endif -%}
  }

  #DP--{{ section.id }} .dsgn-pck__block--title, #DP--{{ section.id }} .dsgn-pck__block--vendor, #DP--{{ section.id }} .dsgn-pck__block--price, #DP--{{ section.id }} .dsgn-pck__block--vendor, #DP--{{ section.id }} .dsgn-pck__block--custom_text, #DP--{{ section.id }} .dsgn-pck__block--liquid   {
    {% if product_alpha != blank and border_alpha == 0 %}
      padding: 0 15px;
    {% endif %}
  }

  #DP--{{ section.id }} .dsgn-pck__grid-mobile--1-per-row {
    grid-template-columns: 1fr;
  }

  #DP--{{ section.id }} .dsgn-pck__grid-mobile--2-per-row {
    grid-template-columns: 1fr 1fr;
  }

  #DP--{{ section.id }} .dsgn-pck__grid-mobile--3-per-row {
    grid-template-columns: 1fr 1fr 1fr;
  }

  #DP--{{ section.id }} .dsgn-pck__grid-mobile--4-per-row {
    grid-template-columns: 1fr 1fr 1fr 1fr;
  }

  {%- if section.settings.mobile_custom_css != blank -%}
    {%- assign mobile_custom_declarations = section.settings.mobile_custom_css | split: '}' -%}
    {%- for declaration in mobile_custom_declarations -%}
      {%- if declaration contains '{' -%}
        #DP--{{ section.id }} {{ declaration }} }
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}

}

</style>

{%- if collection == blank and request.design_mode -%}
  <div class="dsgn-pck__justify-center">
    <p>Please choose collection to display content.</p>
  </div>
  {%- break -%}
{%- endif -%}

{%- comment -%} HTML {%- endcomment -%}
<section id="DP--{{ section.id }}" class="DP--{{ section.id }} dsgn-pck__collection-blocks dsgn-pck__section">
  <div class="dsgn-pck__sizer">
    <div class="dsgn-pck__grid dsgn-pck__grid--{{ section.settings.per_row }}-per-row dsgn-pck__grid-mobile--{{ section.settings.mobile_per_row }}-per-row">

      {%- if template.name == 'collection' -%}
        {% assign paginate_count = section.settings.per_page %}
      {%- else -%}
        {% assign limit = section.settings.per_page %}
      {%- endif -%}

      {% paginate collection.products by paginate_count %}
        {% for product in collection.products limit: limit %}
          {%- if product.variants.size > 1 and section.settings.show_variants != false -%}
            {%- assign variant_loop = true -%}
            {% for variant in product.variants %}
              {% comment %} Duplicated code also lives below - if you make a change, you MUST copy update the other .dsgn-pck__grid-item code block as well{% endcomment %}
              <div class="dsgn-pck__grid-item dsgn-pck__block-{{ variant.id }} dsgn-pck__justify-{{ section.settings.text_alignment }} {% if variant.compare_at_price > variant.price %}dsgn-pck__discounted {% endif %}">
                <a class="dsgn-pck__absolute-link" href="{{ variant.url }}">{{ variant.title }}</a>
                <div class="dsgn-pck__grid-item-content">
                  {%- if product_sticker != blank -%}
                    <style>
                      {%- assign sticker_alpha = product_sticker.settings.sticker_background_color | color_extract: 'alpha' -%}

                      .dsgn-pck__block-{{ variant.id }} .dsgn-pck__product-tag {
                        color: {{ product_sticker.settings.sticker_label_color }};
                        border: thin solid;
                        border-color: {%- if sticker_alpha != 0 -%}{{ product_sticker.settings.sticker_background_color }}{%- else -%}{{ product_sticker.settings.sticker_label_color }}{%- endif -%};
                        background-color: {{ product_sticker.settings.sticker_background_color }};
                      }
                    </style>
                  {%- endif -%}
                  {%- for block in section.blocks -%}
                    <div id="DP--{{ block.id }}" class="dsgn-pck__block dsgn-pck__block-id-{{ variant.id }}{{ block.id }} dsgn-pck__block--{{ block.type }} dsgn-pck__block--{{ forloop.index }} {% if block.type != 'read_more' and block.type != 'buy_button' -%}dsgn-pck__rte{%- endif -%}" {{ block.shopify_attributes }}>
                      {%- case block.type -%}
                        {%- when 'buy_button' -%}
                          {%- comment -%} Color: check if color is set to transparent {%- endcomment -%}
                          {%- assign button_alpha = block.settings.button_background_color | color_extract: 'alpha' -%}
                          <style>
                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .dsgn-pck__buy-button {
                              width: 100%;
                              display: flex;
                              justify-content: center;
                              align-items: center;
                              text-align: center;
                              text-decoration: none;
                              padding: 0.5em 1.2em;
                              margin-top: 1em;
                              border: thin solid;
                              transition: all 0.3s ease-in-out;
                              border-radius: {{ block.settings.button_radius }}px;
                              line-height: calc(3px + 2ex + 3px);
                              font-family: inherit;
                              margin-top: 15px;
                              cursor: pointer;
                              font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
                              {%- if section.settings.override_theme_font != blank -%}
                              font-family: var(--main-font);
                              font-weight: var(--main-font-weight);
                              font-style: var(--main-font-style);
                              {%- endif -%}
                              color: {{ block.settings.button_label_color }};
                              border-color: {%- if button_alpha != 0 -%}{{ block.settings.button_background_color }}{%- else -%}{{ block.settings.button_label_color }}{%- endif -%};
                              background-color: {{ block.settings.button_background_color }};
                            }

                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .dsgn-pck__buy-button:hover {
                              opacity: 1;
                              {%- if button_alpha != 0 -%}
                              background-color: {{ block.settings.button_background_color | color_darken: 10 }};
                              border-color: transparent;
                              {%- else -%}
                              background-color: {{ block.settings.button_label_color | color_modify: 'alpha', 0.1 }}
                              {%- endif -%};
                            }
                          </style>

                          {%- if variant.available -%}
                            {%- if variant.has_only_default_variant == false -%}
                              <a href="{{ variant.url }}" class="dsgn-pck__buy-button">{{ block.settings.buy_button_variant_label }}</a>
                            {%- else -%}
                              <form method="post" action="/cart/add" data-dsgn-pck-add-to-cart="{{ block.settings.add_to_cart_option }}" class="dsgn-pck__add-to-cart-form">
                                {%- if variant_loop == false -%}
                                  <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                                {%- else -%}
                                  <input type="hidden" name="id" value="{{ variant.id }}" />
                                {%- endif -%}
                                <input type="hidden" name="id" value="{{ variant.id }}" />
                                <input type="hidden" min="1" id="quantity" name="quantity" value="1"/>
                                <button type="submit" class="dsgn-pck__buy-button">{{ block.settings.buy_button_label }}</button>
                              </form>
                            {%- endif -%}
                          {%- endif -%}
                        {%- when 'image_gallery' -%}
                          {% assign media_count = product.media | size %}
                          <style>
                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .dsgn-pck__image-gallery-wrapper {
                              --page-dots: {{ block.settings.show_dots }};
                              --prev-next-buttons: {{ block.settings.show_arrows }};
                              --autoplay: {{ block.settings.autoplay }};
                            }

                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .flickity-prev-next-button {
                              {% unless  media_count > 1 %}
                                display: none;
                              {% endunless %}
                            }

                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .flickity-page-dots {
                              {% unless  media_count > 1 %}
                                display: none;
                              {% endunless %}
                            }
                          </style>
                          {%- if block.settings.image_crop == 'none' -%}
                              {%- assign image_crop_width = variant.featured_image.width | default: '1000' -%}
                              {%- assign image_crop_height = variant.featured_image.height | default: '1200' -%}
                            {%- else -%}
                              {%- assign image_crop_width = block.settings.image_crop | split: ':' | first | times: 1000 -%}
                              {%- assign image_crop_height = block.settings.image_crop | split: ':' | last | times: 1000 -%}
                            {%- endif -%}
                          <div class="dsgn-pck__image-gallery">
                            <div id="slider-{{ variant.id }}" data-dsgn-pck-slider="{{variant.id}}" class="dsgn-pck__image-gallery-wrapper">
                              {% assign images = product.media | where: "media_type", "image" %}
                              {% for image in images %}
                                <div class="dsgn-pck__item dsgn-pck__block-{{ block.id }}" {{ block.shopify_attributes }}>
                                  <div class="dsgn-pck__image__wrapper">
                                  <svg class="dsgn-pck__svg-sizer" viewBox="0 0 {{ image_crop_width }} {{ image_crop_height }}"></svg>
                                  {{ image | image_url: width: 2800 | image_tag: widths: widths, sizes: sizes }}
                                </div>
                                </div>
                              {% endfor %}
                            </div>
                          </div>
                        {%- when 'color_swatches' -%}
                          <style>

                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .dsgn-pck__color-swatches {
                              display: flex;
                              flex-wrap: wrap;
                              gap: 10px;
                            }

                            .dsgn-pck__block-id-{{ variant.id }}{{ block.id }} .dsgn-pck__color-swatch {
                              {%- case block.settings.swatch_size -%}
                                {%- when 'small' -%}
                                  {%- assign swatch_size = 20 -%}
                                {%- when 'medium' -%}
