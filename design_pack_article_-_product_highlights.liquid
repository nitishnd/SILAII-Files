{%- comment -%} CSS {%- endcomment -%}
<style>
{%- if section.settings.override_theme_font != blank -%}
  {%- for font in font_array -%}
    {%- unless font contains 'error' -%}{{ font }}{%- endunless -%}
  {%- endfor -%}
  .DP--{{ section_id }} {
    --main-font: {{ section.settings.main_font.family }}, {{ section.settings.main_font.fallback_families }};
    --main-font-weight: {{ section.settings.main_font.weight }};
    --main-font-style: {{ section.settings.main_font.style }};
    --heading-font: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    --heading-font-weight: {{ section.settings.heading_font.weight }};
    --heading-font-style: {{ section.settings.heading_font.style }};
  }
{%- endif -%}

.DP--{{ section_id }} {
  --dash-height: 25px;
  background: {{ section.settings.background_color }};
  margin-bottom: {{ section.settings.outer_margin }}px;
  margin-top: {{ section.settings.outer_margin }}px;
}

.DP--{{ section_id }} .dsgn-pck__sizer {
  padding-top: {{ section.settings.inner_padding }}px;
  padding-bottom: {{ section.settings.inner_padding }}px;
  width: 100%;
  max-width: {{ max_width }};
  flex-wrap: wrap;
}

.DP--{{ section_id }} .dsgn-pck__heading {
  margin: 0;
  margin-bottom: calc(3px + 2ex + 3px);
  color: {{ section.settings.heading_color }};
  line-height: var(--dp-g-heading-line-height, var(--dp-heading-line-height, calc(3px + 2ex + 3px)));
  font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 35px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--heading-font);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  {%- endif -%}
}

.DP--{{ section_id }} .dsgn-pck__product {
  position: relative;
}

.DP--{{ section_id }} .dsgn-pck__product::before {
  content: '';
  height: var(--dash-height);
  width: 1px;
  position: absolute;
  display: block;
  left: 50%;
  top: calc(var(--dash-height) * -1);
  transform: translateX(-50%);
  background: {{ section.settings.border_color }};
}

:root {
  --dp-linked-product-size: {{ productsArray.size | at_most: 4 | at_most: section.settings.limit }};
}

.DP--{{ section_id }} .dsgn-pck__linked-products-container {
  position: relative;
  flex-wrap: wrap;
  align-items: stretch;
  width: calc((100% / var(--dp-linked-product-size)) * calc(var(--dp-linked-product-size) - 1));
  min-width: 50%;
  margin: 0 auto;
}

.DP--{{ section_id }} .dsgn-pck__linked-products-container::before {
  content: '';
  width: calc((100% / var(--dp-linked-product-size)) * calc(var(--dp-linked-product-size) - 1));
  position: absolute;
  top: calc(var(--dash-height) * -1);
  height: 1px;
  display: block;
  background: {{ section.settings.border_color }};
}

.DP--{{ section_id }} .dsgn-pck__product {
  padding: 5px 10px;
  width: calc(100% / var(--dp-linked-product-size));
}

.DP--{{ section_id }} .dsgn-pck__product a {
  text-decoration: none;
  color: {{ section.settings.text_color }};
}

.DP--{{ section_id }} .dsgn-pck__product:nth-child(n+5) {
  margin-top: 1.2em;
}

.DP--{{ section_id }} .dsgn-pck__product:nth-child(n+5)::before {
  display: none;
}

.DP--{{ section_id }} .dsgn-pck__product-image {
  {%- capture thumbnail_height -%}
  {%- case section.settings.image_size -%}
    {%- when 'small' -%}
      100px
    {%- when 'medium' -%}
      200px
    {%- when 'large' -%}
      300px
  {%- endcase -%}
  {%- endcapture -%}
  height: {{ thumbnail_height }};
  object-fit: contain;
}

.DP--{{ section_id }} .dsgn-pck__product-title {
  margin: 0;
  color: {{ section.settings.text_color }};
  line-height: var(--dp-g-body-line-height, var(--dp-body-line-height, calc(3px + 2.5ex + 3px)));
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

.DP--{{ section_id }} .dsgn-pck__product-link {
  margin-top: 10px;
  color: {{ section.settings.text_color }};
  border-bottom: 1px solid {{ section.settings.text_color }};
  display: inline-block;
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.008 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

.DP--{{ section_id }} .dsgn-pck__additional {
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-top: var(--dash-height);
  border-top: 1px solid {{ section.settings.border_color }};
}

{%- if section.settings.custom_css != blank -%}
  {%- assign custom_section_declarations = section.settings.custom_css | split: '}' -%}
  {%- for declaration in custom_section_declarations -%}
    {%- if declaration contains '{' -%}
      #DP--{{ section_id }} {{ declaration }} }
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

/* Landscape phone to portrait tablet */
@media (max-width: 767px) {

  .DP--{{ section_id }} .dsgn-pck__linked-products-container {
    width: 80%;
  }

  .DP--{{ section_id }} .dsgn-pck__linked-products-container::before,
  .DP--{{ section_id }} .dsgn-pck__product::before {
    display: none;
  }

  .DP--{{ section_id }} .dsgn-pck__product {
    flex-basis: 50%;
  }

  .DP--{{ section_id }} .dsgn-pck__product-image {
    height: auto;
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  .DP--{{ section_id }} .dsgn-pck__sizer {
    padding-top: {{ section.settings.inner_padding | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.inner_padding | divided_by: 2 }}px;
  }

  {%- if section.settings.mobile_custom_css != blank -%}
    {%- assign mobile_custom_declarations = section.settings.mobile_custom_css | split: '}' -%}
    {%- for declaration in mobile_custom_declarations -%}
      {%- if declaration contains '{' -%}
        #DP--{{ section_id }} {{ declaration }} }
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
}
</style>

{%- comment -%} HTML {%- endcomment -%}
<section id="DP--{{ section_id }}" class="DP--{{ section_id }} dsgn-pck__article-product-links dsgn-pck__section">
  {%- if section.settings.anchor_id != blank -%}
    <div id="{{ section.settings.anchor_id | remove: '#' | handleize }}" class="dsgn-pck__anchor-id" style="height: 0; overflow: hidden;"></div>
  {%- endif -%}
  <div class="dsgn-pck__sizer">
    <aside class="dsgn-pck__linked-products">
      {%- if section.settings.linked_product_title != blank -%}
      <h2 data-no-toc class="dsgn-pck__heading dsgn-pck__justify-center">{{ section.settings.linked_product_title
        }}</h2>
      {%- endif -%}
      <div
        class="dsgn-pck__linked-products-container dsgn-pck__flex dsgn-pck__justify-center">
          {% for productHandle in productsArray limit: section.settings.limit %}
            {% liquid
              if productHandle contains '?variant'
                assign variantId = productHandle | split: '?variant=' | last | plus: 0
                assign productHandleNew = productHandle | split: '?' | first
                assign variants = all_products[productHandleNew].variants
                for variant in variants
                  if variant.id == variantId
                    assign productFoundInPage = all_products[productHandleNew]
                    assign productImage = variant.image | default: productFoundInPage.featured_image
                    assign productTitle = productFoundInPage.title | append: ' ‚Ä¢ ' | append: variant.title
                    assign productUrl = variant.url
                  endif
                endfor
              else
                assign productHandleNew = productHandle | split: '?' | first
                assign productFoundInPage = all_products[productHandleNew]
                assign productImage = productFoundInPage.featured_image
                assign productTitle = productFoundInPage.title
                assign productUrl = productFoundInPage.url
              endif
            %}
            <div class="dsgn-pck__product dsgn-pck__flex-item dsgn-pck__item ">
              <a href="{{ productUrl }}">
                {%- if productImage != blank -%}
                  {%- capture sizes -%}
                    (max-width: 480px) 50vw,(max-width: 767px) 50vw, 25vw
                  {%- endcapture -%}
                  {{ productImage | image_url: width: 800 | image_tag:  class: 'dsgn-pck__product-image', widths: widths, sizes: sizes }}
                {%- endif -%}
              </a>
              <p class="dsgn-pck__product-title">
                <a href="{{ productUrl }}">
                  {{ productTitle }}
                </a>
              </p>
              <a class="dsgn-pck__product-link" href="{{ productUrl }}">
                {{ section.settings.featured_product_link_label }}
              </a>
            </div>
          {% endfor %}
      </div>

    </aside>
  </div>
</section>
{%- endcapture -%}
