                {{ block.settings.button_label }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
    {%- if visible_blocks == 0 and section.settings.enable_metafield_detect == true -%}
      <style>
        .DP--{{ section_id }} {
          display: none;
        }
