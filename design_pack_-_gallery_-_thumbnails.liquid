{%- comment -%} JavaScript {%- endcomment -%}
<script data-dsgn-pck-js="{{ section_id }}" type="module" defer>
(function(){

  const designPack = {
    settings: {},
    changeImage: function(e, main_image, main_image_svg, thumbnail_image){
      const image_path = e.currentTarget.src;
      const image_srcset = e.currentTarget.srcset;
      const sibling = thumbnail_image.previousElementSibling;
      const sibling_viewbox = sibling.viewBox;
      main_image.src = image_path;
      main_image.srcset = image_srcset;
      main_image_svg.viewBox.baseVal.height = sibling_viewbox.baseVal.height;
      main_image_svg.viewBox.baseVal.width = sibling_viewbox.baseVal.width;
    },
    animateSection: function(entries, observer){
      // Target the first entry available.
      let observedSection = entries[0];
      if (observedSection.isIntersecting) {
        observedSection.target.classList.add('dsgn-pck__animation-applied');
      }
    },
    load: function(section){
      const main_image = section.querySelector('[data-dsgn-pck-main-image] img')
      const main_image_svg = section.querySelector('[data-dsgn-pck-main-image] svg')
      // Grab all the thumbnails
      const thumbnail_images = section.querySelectorAll('[data-dsgn-pck-image] img');
      // Setup thumbnail listener
      thumbnail_images.forEach(function(thumbnail_image) {
        thumbnail_image.addEventListener('click', function(event){
          designPack.changeImage(event, main_image, main_image_svg, thumbnail_image);
        });
      });

      if (this.settings.animation !== 'none'){
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: [0, 0.25, 0.5, 0.75, 1]
        };
        // Construct Intersection Observer.
        const observer = new IntersectionObserver( this.animateSection, options );
        // Observe if element is present.
        if (section) {
          observer.observe(section);
        }
      }
    },
    unload: function(section){
      section.classList.remove('dsgn-pck__animation-applied');
      const thumbnail_images = section.querySelectorAll('[data-dsgn-pck-image] img');
      thumbnail_images.forEach(function(thumbnail_image) {
        thumbnail_image.removeEventListener('click', designPack.changeImage);
      });
    }
  }

  window.addEventListener('shopify:section:unload', function (e) {
    const settings = document.querySelector(`[data-dsgn-pck="${e.detail.sectionId}"]`);
    const sectionId = e.detail.sectionId;
    const section = document.querySelector(`#DP--${e.detail.sectionId}`);
    if (sectionId == designPack.settings.id){
      designPack.unload(section);
    }
  });

  designPack.settings = JSON.parse(document.querySelector('[data-dsgn-pck="{{ section_id }}"]').innerHTML);
  const sectionId = {{ section_id | json }};
  const section = document.querySelector(`#DP--${sectionId}`);

  if (sectionId == designPack.settings.id){
    designPack.load(section);
  }
})()
</script>
